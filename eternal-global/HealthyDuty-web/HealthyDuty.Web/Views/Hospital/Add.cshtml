@using HealthyDuty.Web.Business.Common
@using HealthyDuty.Web.Controllers

@model HealthyDuty.Web.Models.Hospital.AddViewModel

@{
    ViewData["Title"] = "Hospital Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Hospital Add</strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Add", "Hospital", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Name</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Phone</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Address</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Address, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">City</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.CityCode, Model.CitySelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.CityCode, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit">
                                <i class="fa fa-dot-circle-o"></i> Save
                            </button>
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/Hospital/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>


