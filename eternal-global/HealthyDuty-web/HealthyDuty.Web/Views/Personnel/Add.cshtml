@using HealthyDuty.Web.Business.Common
@using HealthyDuty.Web.Controllers

@model HealthyDuty.Web.Models.Personnel.AddViewModel

@{
    ViewData["Title"] = "Personnel Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Personnel Add</strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Add", "Personnel", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Hospital</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.HospitalId, Model.HospitalSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.HospitalId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">TC</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.TC, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.TC, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Phone</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Last Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">User Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Password</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Address</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Address, 5, 20, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Address, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit">
                                <i class="fa fa-dot-circle-o"></i> Save
                            </button>
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/Personnel/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>


