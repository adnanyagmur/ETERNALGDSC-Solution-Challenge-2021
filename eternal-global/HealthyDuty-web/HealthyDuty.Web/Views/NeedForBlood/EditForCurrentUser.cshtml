@using HealthyDuty.Web.Business.Common
@using HealthyDuty.Web.Controllers
@model HealthyDuty.Web.Models.NeedForBlood.AddForCurrentUserViewModel

@{
    ViewData["Title"] = "Need For Blood Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong> Need For Blood Edit </strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("EditForCurrentUser", "NeedForBlood", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Code</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.BloodGroupId, Model.BloodGroupSelectList, "Select", new { @class = "form-control form-control-sm", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.BloodGroupId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>



                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Donor Name</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.DonorName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.DonorName, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Donor Last Name</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.DonorLastName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.DonorLastName, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Donor Phone</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.DonorPhone, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.DonorPhone, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit" name="SubmitType" value="Edit">
                                <i class="fa fa-dot-circle-o"></i>Save
                            </button>
                            &nbsp;
                            @*&nbsp;
                            <button class="btn btn-sm btn-secondary" type="submit" name="SubmitType" value="Delete" onclick="return confirm('Are You Sure?');">
                                <i class="fa fa-trash"></i>  Delete
                            </button>


                            &nbsp;*@
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/NeedForBlood/ListForCurrentUser">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
