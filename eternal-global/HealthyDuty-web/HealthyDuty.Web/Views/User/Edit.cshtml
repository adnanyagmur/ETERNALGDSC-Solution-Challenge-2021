@using HealthyDuty.Web.Business.Common
@using HealthyDuty.Web.Controllers
@model HealthyDuty.Web.Models.User.AddViewModel

@{
    ViewData["Title"] = "User Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong> User Edit </strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block text-danger" })
                        </div>
                        <label class="col-md-2 col-form-label">Last Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Phone</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "help-block text-danger" })
                        </div>
                        <label class="col-md-2 col-form-label">Age</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Age, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Age, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Email</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-block text-danger" })
                        </div>
                        <label class="col-md-2 col-form-label">Sex</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(m => m.SexId, Model.SexSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.SexId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">User Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block text-danger" })
                        </div>
                        <label class="col-md-2 col-form-label">Password</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Blood Group</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(m => m.BloodGroupId, Model.BloodGroupSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.BloodGroupId, null, new { @class = "help-block text-danger" })
                        </div>
                        <label class="col-md-2 col-form-label">City</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(m => m.CityCode, Model.CitySelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.CityCode, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit" name="SubmitType" value="Edit">
                                <i class="fa fa-dot-circle-o"></i>Save
                            </button>
                            &nbsp;
                            @*&nbsp;
                                <button class="btn btn-sm btn-secondary" type="submit" name="SubmitType" value="Delete" onclick="return confirm('Are You Sure?');">
                                    <i class="fa fa-trash"></i>  Delete
                                </button>


                                &nbsp;*@
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/User/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
